{
  "name": "spiral/storage",
  "type": "library",
  "description": "Storage API: Amazon, Rackspace, FTP, SFTP, Filesystem, GridFS",
  "license": "MIT",
  "authors": [
    {
      "name": "Anton Titov / Wolfy-J",
      "email": "wolfy.jd@gmail.com"
    }
  ],
  "require": {
    "php": ">=7.1",
    "spiral/core": "^1.0",
    "spiral/debug": "^1.0",
    "spiral/files": "^1.0",
    "psr/simple-cache": "^1.0",
    "curl/curl": "^1.9",
    "zendframework/zend-diactoros": "^1.8"
  },
  "require-dev": {
    "phpunit/phpunit": "~7.0",
    "mockery/mockery": "^1.1"
  },
  "suggest": {
    "mongodb/mongodb": "To enable support of GridFS storage"
  },
  "autoload": {
    "psr-4": {
      "Spiral\\": "source/Spiral/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Spiral\\Storage\\Tests\\": "tests/Storage/"
    }
  }
}
